<h1>{{ticket.name}}</h1>

<h3>Due: {{ticket.deadline}}</h3>
<p>Created by: {{ticket.created_by}}</p>
<p>Assigned to: {{ticket.assigned_to}}</p>


<a href="/lists/tickets/{{ticket._id}}/edit?listId={{listId}}">Edit this ticket</a>
<form action="/lists/tickets/{{ticket._id}}?_method=DELETE", method="POST">
  <input type="hidden" name="listId" value="{{listId}}">
  <div>
    <input type="submit" value="Delete Ticket">
  </div>
</form>
<a href="/lists">Back to index</a>
